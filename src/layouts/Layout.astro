 .navbar a,a,h1,html{color:#fff}.column a,.dropdown-content a,.navbar a{text-decoration:none}html{font-family:Verdana,sans-serif;font-weight:400;font-size:17px;line-height:1.6}.close-btn,h1,h2,h3,h4,h5,h6{font-weight:700}body{margin:0;width:100%;height:100%;background:#000;scroll-behavior:smooth}h1{font-size:3em;text-transform:uppercase;text-shadow:1px 1px 3px rgba(0,0,0,.7)}.logo img{width:140px;transition:width .3s ease-in-out}.fixed .logo img{width:100px}.logo-desktop{display:block;margin:0!important;padding:0!important}.logo-mobile{display:none}.sticky-header{position:relative;transition:.3s ease-in-out;min-height:60px}.fixed{position:fixed;top:0;width:100%;z-index:1000}.navbar{overflow:hidden;background-color:#000}.navbar a{float:left;text-align:center;padding:14px 16px}.dropdown{float:left;overflow:hidden}.dropdown .dropbtn{border:none;outline:0;color:#fff;background-color:inherit;font:inherit}.dropdown:hover .dropbtn,.navbar a:hover{background-color:990000}.dropdown-content{position:absolute;width:100%;min-height:50px;left:0;z-index:1;visibility:hidden;border-bottom:5px solid rgba(123,122,122,.9);background-color:rgba(0,0,0,.8);text-align:center;background-blend-mode:overlay;backdrop-filter:blur(10px);-webkit-backdrop-filter:blur(10px)}.column a:hover,.phone-number{background-color:#900}.dropdown-content a{display:flex;align-items:center;font-size:16px;padding:8px 0}.column a,.dropdown-content .header{padding:16px;color:#fff}.dropdown-content a img{width:25px;height:25px;display:inline-block;margin:0 10px -6px}.dropdown:hover .dropdown-content{visibility:visible;transition:opacity .5s,visibility .5s;display:block}.column{float:left;flex:1;width:33.33%;padding:10px;height:100%;box-sizing:border-box}.column a{float:none;display:block;text-align:left}.column a img{width:25px;height:25px;margin-right:10px}.row{display:flex;flex-wrap:nowrap;justify-content:space-between}.row:after{content:"";display:table;clear:both}.phone-number{font-size:14px;float:right!important;margin:0 30px 0 0}.logo{width:140px;transition:width .3s}.fixed .logo{width:90px}a.logo{margin:0 50px 10px 0!important;padding:10px 0 0 20px!important}a.logo:hover{background-color:#000}.close-btn{display:none;position:absolute;bottom:0;right:0;background:0 0;border:none;color:#fff;font-size:28px;cursor:pointer;z-index:1001}@media screen and (max-width:768px){.dropdown-content img,.logo-desktop{display:none}.close-btn,.logo-mobile{display:block}.dropdown-content{padding:0;width:100%;top:100%}.dropdown-content a img{display:none!important}.dropdown .dropbtn{font-size:15px!important;padding:5px 2px}.navbar a{padding:5px}} 
`;

import MegaMenu from '../components/MegaMenu.jsx';
import Reviews from '../components/Reviews.jsx';
import Footer from '../components/Footer.jsx';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import type { BreadcrumbItem } from '../components/Breadcrumbs.astro';
interface Props {
	title?: string;
	description?: string;
	type?: 'website' | 'article';
	structuredData?: object;
	breadcrumbs?: BreadcrumbItem[];
}
const { 
	title = "Astro Basics",
	description = "Welcome to Astro Basics - A starter template for building fast websites with Astro",
	type = "website",
	structuredData,
	breadcrumbs = []
} = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site ?? 'http://localhost:4321');

const defaultStructuredData = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"name": title,
	"description": description,
	"url": canonicalURL.toString()
};
const finalStructuredData = structuredData || defaultStructuredData;

---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
 <Fragment>
      <style set:html={criticalCSS} />
    </Fragment>

		<link rel="preload" href="/bg.mp4" as="video" type="video/mp4">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta property="og:type" content={type} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<script type="application/ld+json" set:html={JSON.stringify(finalStructuredData)} />	
		</head>
	<body>
<MegaMenu client:load />
	<Reviews client:idle />
		{breadcrumbs.length > 0 && <Breadcrumbs items={breadcrumbs} />}
		<main style="margin-top: 4rem;">
			<slot />
		</main>
      <iframe
    loading="lazy"
    width="100%"
    height="400"
    title="Same Day Appliance Repair - areas we serve"
    src="https://www.google.com/maps/d/u/2/embed?mid=1WYfJlezd7yel0cIXNhjCrg5PrRJVxh0&ehbc=2E312F"
    style="border:0;">
  </iframe>
		<Footer />
	</body>
</html>